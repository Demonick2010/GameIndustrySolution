@page "/Counter"

@*Урок 3 привязка данных*@
<div class="row">
    <div class="col alert alert-secondary text-center">
        @*Урок 7*@
        @*<h1 style="color: @Color">COUNTER</h1>*@
        <h1 style="color: @Styles.Color">COUNTER</h1>
    </div>
</div>
<div class="row">
    <div class="col-6 text-left">
        <button class="btn btn-success p-3" @onclick="ClickHandler">!Click Me!</button>
    </div>
    <div class="col-6 text-right">
        @*Урок 7*@
        @*<div style="font-size: @Size; color: @Color">@counter</div>*@
        <div style="font-size: @Styles.Size; color: @Styles.Color">@counter</div>
    </div>
</div>

<div class="row">
    <div class="col text-center">
        <input type="number" @bind="counter" class="form-control-lg" />
    </div>
</div>

<div class="row mt-3">
    <div class="col-6 text-center alert alert-primary">
        Singleton count: @singleton.Value
    </div>
    <div class="col-6 text-center alert alert-danger">
        Transient count: @trensient.Value
    </div>
</div>